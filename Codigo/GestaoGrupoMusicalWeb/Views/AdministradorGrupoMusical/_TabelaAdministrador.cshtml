@model IEnumerable<Core.DTO.AdministradorGrupoMusicalDTO>

<div class="table-responsive">
    <table class="table">
        <thead class="bg-danger bg-opacity-75 text-white">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cpf)
                </th>
                <th>
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="border-bottom border-danger border-opacity-75">
                    <td class="py-3">
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td class="py-3">
                        @Html.DisplayFor(modelItem => item.Cpf)
                    </td>
                    <td class="py-3 border-0 d-flex flex-column flex-lg-row gap-3">
                        <a class="btn btn-sm btn-secondary" role="button" asp-action="Notificar" asp-route-id="@item.Id">
                            <i class="fa-solid fa-envelope"></i>
                            Notificar
                        </a>
                        <a class="btn btn-sm btn-secondary" role="button" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa-solid fa-xmark"> </i>
                            Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>