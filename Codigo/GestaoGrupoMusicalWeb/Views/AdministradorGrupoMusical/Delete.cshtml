@model GestaoGrupoMusicalWeb.Models.PessoaViewModel

@{
    ViewData["Title"] = "Remover Administrador";
}

<h1>Remover Cargo de Administrador</h1>

<h3>Tem certeza de que deseja remover @Model.Nome como administrador do grupo? </h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" name="idGrupoMusical" value="@ViewBag.idGrupoMusical" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@ViewBag.idGrupoMusical" asp-route-NomeGrupo="@ViewBag.nomeGrupo">Cancelar</a>
    </form>
</div>
