@model IEnumerable<GestaoGrupoMusicalWeb.Models.FigurinoViewModel>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Notificar">

    <h1>Index</h1>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        <form id="@(item.Id + "_confirmar")" asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <a role="button" class="btn btn-secondary btn-sm  m-2" asp-controller="Figurino" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"> </i> Editar </a>
                            <a onclick="showModal('@(item.Id + "_confirmar")', 'figurinoModal')" class="btn btn-sm btn-secondary" role="button" data-bs-toggle="modal" data-bs-target="#figurinoModal">
                                <i class="fa-solid fa-xmark"> </i>
                                Excluir
                            </a>
                            <a role="button" class="btn btn-secondary btn-sm  m-2" asp-controller="Figurino" asp-action="Estoque" asp-route-id="@item.Id"><i class="fa-solid fa-arrow-trend-up"></i> Estoque </a>
                            <a role="button" class="btn btn-secondary btn-sm  m-2" asp-controller="" asp-action="" asp-route-id="@item.Id"><i class="fa-solid fa-arrow-right-arrow-left"></i> Movimentar </a>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
