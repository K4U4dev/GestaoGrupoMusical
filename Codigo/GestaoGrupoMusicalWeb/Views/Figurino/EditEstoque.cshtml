@model GestaoGrupoMusicalWeb.Models.CreateEstoqueViewModel

@{
    ViewData["Title"] = "Editar Estoque";
}

<h1>Editar Estoque</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEstoque">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" readonly/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" readonly/>
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdManequim" class="control-label"></label>
                <Select disabled asp-items="@Model.listManequim" asp-for="IdManequim" class="form-control"></Select>
                <span asp-validation-for="IdManequim" class="text-danger"></span>
                <input type="hidden" asp-for="IdManequim" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="IdFigurino" class="form-control" />
                <span asp-validation-for="IdFigurino" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeDisponivel" class="control-label"></label>
                <input asp-for="QuantidadeDisponivel" class="form-control" />
                <span asp-validation-for="QuantidadeDisponivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Estoque" asp-route-id="@Model.IdFigurino">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
