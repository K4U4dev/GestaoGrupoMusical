@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-between align-items-center">
    <h5>Próximos Evento</h5>
    <a role="button" class="btn btn-secondary" asp-controller="Evento" asp-action="Create">Novo Evento</a>
</div>

<table class="table">
    <thead class="border-bottom border-danger">
        <tr>
            <th class="bg-danger opacity-75 border-0">
                <span class="text-white">Data</span>
            </th>
            <th class="bg-danger opacity-75 border-0">
                <span class="text-white">Local</span>
            </th>
            <th class="bg-danger opacity-75 border-0">
                <span class="text-white">Açoes</span>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Evento)
        {
            <tr>
                <td class="border-bottom border-danger opacity-75">
                    @item.DataHoraInicio
                </td>
                <td class="border-bottom border-danger opacity-75">
                    @item.Local
                </td>
                <td class="border-bottom border-danger opacity-75">

                </td>
            </tr>
        }
    </tbody>
</table>

