@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-between align-items-center">
    <h5>Próximos Evento</h5>
    <a role="button" class="btn btn-secondary m-3" asp-controller="Evento" asp-action="Create">Novo Evento</a>
</div>

<table class="table">
    <thead class="border-bottom border-danger">
        <tr>
            <th class="bg-danger opacity-75 border-0 px-3">
                <span class="text-white">Data</span>
            </th>
            <th class="bg-danger opacity-75 border-0 px-3">
                <span class="text-white">Local</span>
            </th>
            <th class="bg-danger opacity-75 border-0 px-3">
                <span class="text-white">Açoes</span>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Evento)
        {
            <tr class="border-bottom border-danger opacity-75 p-3 align-middle">
                <td class="p-3">
                    @item.DataHoraInicio
                </td>
                <td class="p-3">
                    @item.Local
                </td>
                <td class="d-flex justify-content-between border-0 p-3">
                    <a role="button" class="btn btn-secondary btn-sm" asp-controller="" asp-action=""><i class="fa-solid fa-list-check"> </i> Frequência </a>
                    <a role="button" class="btn btn-secondary btn-sm" asp-controller="" asp-action=""><i class="fa-solid fa-file"> </i> Detalhes </a>
                    <a role="button" class="btn btn-secondary btn-sm" asp-controller="" asp-action=""><i class="fa-solid fa-pen-to-square"> </i> Editar </a>
                    <a role="button" class="btn btn-secondary btn-sm" asp-controller="" asp-action=""><i class="fa-solid fa-xmark"> </i> Excluir </a>
                </td>
            </tr>
        }
    </tbody>
</table>

