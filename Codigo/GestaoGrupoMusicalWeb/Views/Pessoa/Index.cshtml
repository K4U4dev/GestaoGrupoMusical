@model IEnumerable<Core.DTO.AssociadoDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Associados</h1>

<p>
    <a asp-action="Create">Novo Associado</a>
</p>
<table class="table">
    <thead>
        <tr class="bg-danger opacity-75">
            <th class="px-3 border-0 w-25">
                <span class="text-white">Id</span>
            </th>
            <th class="px-3 border-0 w-25">
                <span class="text-white">Nome</span>
            </th>
            <th class="px-3 border-0 w-25">
                <span class="text-white">Ativo</span>
            </th>
            <th class="px-3 border-0 w-25">
                <span class="text-white">Ações</span>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="border-bottom border-danger border-opacity-75 p-3 align-middle">
                <td class ="p-3">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td class="p-3">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td class="p-3">
                    @{
                        var result = "";

                        if (item.Ativo.CompareTo(1) == 0)
                        {
                            result = "Sim";
                        }
                        else
                        {
                            result = "Não";
                        }
                    }
                    @result
                </td>
                <td class="p-3">
                    @Html.ActionLink("Editar", "Edit", new {  id=item.Id }) |
                    @Html.ActionLink("Excluir", "RemoveAssociado", new {  id=item.Id  })
                </td>
            </tr>
        }
    </tbody>
</table>
