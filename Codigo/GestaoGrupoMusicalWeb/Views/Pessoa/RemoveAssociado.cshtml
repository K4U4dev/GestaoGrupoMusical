@model GestaoGrupoMusicalWeb.Models.PessoaViewModel

@{
    ViewData["Title"] = "Remover Associado";
    ViewData["Pessoa"] = "Associado";
    ViewData["RemoveAssociado"] = "Remover";
}

<div class="row">
    <div class="col-md-8">

        <h1 class="p-3 bg-danger  bg-opacity-75 text-white fs-5">Remover Associado(a) - @Model.Nome</h1>
        <nav>
            <ol class="breadcrumb px-3">
                <strong>
                    <a class="text-danger text-opacity-75" asp-action="Index">@ViewData["Pessoa"]</a>
                    <spn class="text-secondary"><i class="text-dark fa-sharp fa-solid fa-angle-right fa-xs"></i> @ViewData["RemoveAssociado"]</spn>
                </strong>
            </ol>
        </nav>
        <hr />
        <br />
        <div class="container">
            <div class="row">
                <h2 class="fs-5">Dados do Associado(a)</h2>
                <hr />
                <br />

                <div class="form-group">
                    <label class="control-label">Nome</label>
                    <label class="form-control">@Model.Nome</label>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <labe class="form-control">@Model.Email</labe>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row d-flex justify-content-between">
                <div class="form-group col-md-4">
                    <label class="control-label">CPF</label>
                    <label class="form-control" id="campoCpf">@Model.Cpf</label>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Data de nascimento</label>
                    <label class="form-control">@Model.DataNascimento?.ToString("dd/MM/yyyy")</label>
                </div>
                <div class="form-group col-md-4">
                    <label class="control-label">Telefone</label>
                    <label class="form-control">@Model.Telefone1</label>
                </div>
            </div>
        </div>
        <br />
        <br />

@*        <div class="container">
            <div class="row d-flex justify-content-between">
                <h2 class="fs-5">Endereço</h2>
                <hr />
                <br />
