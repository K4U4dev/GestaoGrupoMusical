        <div class="container">
            <div class="row">
                <form asp-action="RemoveAssociado">

                    <div class="form-group">
                        <label asp-for="MotivoSaida" class="control-label"></label>
                        @*<input asp-for="MotivoSaida" class="form-control" />*@
                        <textarea asp-for="MotivoSaida" class="form-control"></textarea>
                        <span asp-validation-for="MotivoSaida" class="text-danger"></span>
                    </div>
                    <br />
                    <br />
                    <input type="hidden" name="Cpf" value="@Model.Cpf" />
                    <div class="container">
                        <div class="row d-flex flex-column-reverse d-grig gap-2 mx-auto d-flex flex-sm-column-reverse flex-xl-row">
                            <div class="col-5 d-none d-sm-block"></div>
                            <a class="btn btn-light text-secondary border border-secondary d-grid gap-2 col-sm" asp-action="Index"> Voltar </a>
                            <input type="submit" value="Excluir" class="btn btn-secondary d-grid gap-2 col-sm " />
                        </div>
                    </div>
