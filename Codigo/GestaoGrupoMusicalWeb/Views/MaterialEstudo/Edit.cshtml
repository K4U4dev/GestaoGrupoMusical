@model GestaoGrupoMusicalWeb.Models.MaterialEstudoViewModel

@{
    ViewData["Title"] = "Editar Material de Estudo";
    ViewData["Material de Estudo"] = "Material de Estudo";
    ViewData["Edit"] = "Editar";
}

<hr />
<div class="row">
    <div class="col-md-8">
        <h1 class="p-3 bg-danger  bg-opacity-75 text-white fs-5">Editar Material de Estudo</h1>
        <nav>
            <ol class="breadcrumb px-3">
                <strong>
                    <a class="text-danger text-opacity-75" asp-action="Index">@ViewData["Material de Estudo"]</a>
                    <spn class="text-secondary"><i class="text-dark fa-sharp fa-solid fa-angle-right fa-xs"></i> @ViewData["Edit"]</spn>
                </strong>
            </ol>
        </nav>
        <hr />
        <br />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" type="hidden" />
            </div>
            <div class="form-group col-xl">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Link" class="control-label"></label>
                <textarea asp-for="Link" class="form-control" maxlength="500" id="linkTextArea" oninput="updateCharacterCount()"></textarea>
                <span asp-validation-for="Link" class="text-danger"></span>
                <small id="characterCount">0/500</small>
            </div>
            <div class="form-group col-xl-4">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" readonly />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="IdGrupoMusical" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="IdColaborador" class="form-control" type="hidden" />
            </div>
            <br />
            <br />
            <div class="container">
                <div class="row d-flex flex-column-reverse d-grig gap-2 mx-auto d-flex flex-sm-column-reverse flex-xl-row">
                    <div class="col-5 d-none d-sm-block"></div>
                    <a class="btn btn-light text-secondary border border-secondary d-grid gap-2 col-sm" asp-action="Index"> Voltar </a>
                    <input type="submit" value="Salvar" class="btn btn-secondary d-grid gap-2 col-sm " />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    function updateCharacterCount() {
        var textArea = document.getElementById('linkTextArea');
        var charCount = textArea.value.length;
        var charLimitFromGrupoMusical = textArea.maxLength;
        document.getElementById('characterCount').innerText = charCount + '/' + charLimitFromGrupoMusical;
    }

    document.addEventListener('DOMContentLoaded', function () {
        updateCharacterCount();
    });
</script>