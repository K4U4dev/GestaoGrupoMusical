@model IEnumerable<GestaoGrupoMusicalWeb.Models.MaterialEstudoViewModel>

<link href="~/lib/datatable/css/datatables.min.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Material de Estudo";
}

<partial name="_Notificar">

    <div class="d-flex justify-content-between align-items-center">
        <h5>@ViewData["Title"]</h5>
        <a role="button" class="btn btn-secondary m-3" asp-controller="MaterialEstudo" asp-action="Create">Novo Material de Estudo</a>
    </div>
    <table id="tableMaterialEstudo" class="table table-striped table-bordered dt-responsive nowrap ">
        <thead>
            <tr class="bg-danger bg-opacity-75 text-white">
                <th class="px-3">
                    @Html.DisplayNameFor(model => model.Data)
                </th>
                <th class="px-3">
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th class="px-3">
                    @Html.DisplayNameFor(model => model.Link)
                </th>
                <th class="px-3">
                    <span>Ações</span>
                </th>
            </tr>
        </thead>
    </table>
    @*    </div>*@
    @section Scripts {
        <script src="~/lib/datatable/js/datatables.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#tableMaterialEstudo').DataTable({
                    "processing": true, // for show progress bar
                    "serverSide": true, // for process server side
                    "filter": true, // this is for disable filter (search box)
                    "orderMulti": false, // for disable multiple column at once
                    "pageLength": 5,
                    "lengthMenu": [
                        [5, 10, 20, -1],
                        [5, 10, 20, "Todos"]
                    ],
                    "ajax": {
                        "url": "/MaterialEstudo/GetDataPage",
                        "type": "POST",
                        "datatype": "json"
                    },
                    "columnDefs": [{
                        "targets": [0],
                        "visible": true,
                        "searchable": false
                    },
                    {
                        "targets": [3],
                        "visible": true,
                        "searchable": false,
                        "orderable": false

                    }],
                    "columns": [
                        {
                            "data": "data",
                            "name": "Data",
                            "autoWidth": true,
                            "render": function (data, type, full, meta) {
                                var date = new Date(data);
                                var day = String(date.getDate()).padStart(2, '0');
                                var month = String(date.getMonth() + 1).padStart(2, '0');
                                var year = date.getFullYear();
                                var hours = String(date.getHours()).padStart(2, '0');
                                var minutes = String(date.getMinutes()).padStart(2, '0');
                                var seconds = String(date.getSeconds()).padStart(2, '0');
                                return day + '/' + month + '/' + year + ' ' + hours + ':' + minutes + ':' + seconds;
                            }
                        },
                        { "data": "nome", "name": "Nome", "autoWidth": true },
                        { 
                            "data": "link",
                            "name": "Link",
                            "autoWidth": true,
                            "render": function (data, type, full, meta) {
                                var url = data.startsWith('http://') || data.startsWith('https://') ? data : 'http://' + data;
                                return '<a href="' + url + '" target="_blank" style="text-decoration:none;">Abrir</a>';
                            }
                        },
                        {
                            "render": function (data, type, full, meta) {

                                return '<a class="btn btn btn-secondary btn-sm  m-2" href="/MaterialEstudo/Edit/' + full.id + '"><i class="fa-solid fa-pen-to-square"> </i> Editar</a> ' +
                                    '<a onclick="showConfirmationModal(' + full.id + ')" class="btn btn-sm btn-secondary" role="button"><i class="fa-solid fa-xmark"></i> Excluir</a>' +
                                    '<a class="btn btn btn-secondary btn-sm  m-2" href="/MaterialEstudo/NotificarMaterialViaEmail/' + full.id + '"><i class="fa-solid fa-envelope"></i> Notificar</a> ';
                            }
                        },
                    ],
                    language: {
                        url: "lib/datatable/js/pt-br.json",
                    }
                });
            });
        </script>
    }

    <div class="modal fade" id="materialEstudoModal" tabindex="-1" aria-labelledby="materialEstudoLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="admLabel">Confirmar Exclusão do Material de Estudo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Deseja <b>Excluir</b> o <b>Material de Estudo</b>?
                </div>
                <form method="post" class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary col-3 me-4" data-bs-dismiss="modal">Não</button>
                    <button type="submit" class="btn btn-secondary col-3">Sim</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        function showConfirmationModal(formId) {
            var modal = document.getElementById('materialEstudoModal');
            var modalForm = modal.querySelector('form');
            modalForm.action = '/MaterialEstudo/Delete/' + formId; // Define a ação do formulário com a rota correta
            var modalBody = modal.querySelector('.modal-body');
            modalBody.innerHTML = 'Deseja <b>Excluir</b> o <b>Material de Estudo</b>?'; // Conteúdo do modal

            // Exibe o modal
            var modal = new bootstrap.Modal(modal);
            modal.show();
        }

    </script>

