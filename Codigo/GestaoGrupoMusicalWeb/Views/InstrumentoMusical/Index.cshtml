@model IEnumerable<Core.DTO.InstrumentoMusicalDTO>

@{
    ViewData["Title"] = "Instrumentos Musicais";
}

<div class="d-flex justify-content-between align-items-center">
    <h5>@ViewData["Title"]</h5>
    <a role="button" class="btn btn-primary" asp-controller="InstrumentoMusical" asp-action="Create">Novo Instrumento</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patrimonio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeInstrumento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeAssociado)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Patrimonio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeInstrumento)
            </td>
            <td>
                @item.EnumStatus.Single(s => s.Key == item.Status).Value
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAssociado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id=item.Id  }) |
                @Html.ActionLink("Excluir", "Delete", new { id=item.Id  }) |
                @Html.ActionLink("Movimentar", "Delete", new { id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
