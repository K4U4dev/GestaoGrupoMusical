@model GestaoGrupoMusicalWeb.Models.InstrumentoMusicalViewModel

@{
    ViewData["Title"] = "Editar Instrumento";
}

<h1>Editar Instrumento</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Patrimonio" class="control-label"></label>
                <input asp-for="Patrimonio" class="form-control" />
                <span asp-validation-for="Patrimonio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAquisicao" class="control-label"></label>
                <input asp-for="DataAquisicao" class="form-control" />
                <span asp-validation-for="DataAquisicao" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    var mark = "";
                    var hide = "";

                    if (Model.Status.SequenceEqual("DISPONIVEL"))
                    {
                        mark = "false";
                    }
                    else if (Model.Status.SequenceEqual("DANIFICADO"))
                    {
                        mark = "true";
                    }
                    else if (Model.Status.SequenceEqual("EMPRESTADO"))
                    {
                        //mark = "hidden";
                        hide = "hidden";
                    }
                }
                <input type="checkbox" id="Status" name="Status" value="DANIFICADO" checked=@mark onclick="changeValue()" @hide  />
                <label for="Status" @hide>Danificado</label>

                <script>
                    function changeValue(){
                        alert(document.getElementById("Status").getAttribute("checked"));
                        if (document.getElementById("Status").checked) {
                            document.getElementById("Status").value = "DANIFICADO";
                            alert(document.getElementById("Status").value);
                        }else{
                            document.getElementById("Status").value = "DISPONIVEL";
                            alert(document.getElementById("Status").value);
                        }
                        
                    }
                </script>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoInstrumento" class="control-label"></label>
                <select asp-for="IdTipoInstrumento" asp-items="@Model.ListaInstrumentos" class="form-control"></select>
                <span asp-validation-for="IdTipoInstrumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdGrupoMusical" class="control-label"></label>
                <input asp-for="IdGrupoMusical" class="form-control" />
                <span asp-validation-for="IdGrupoMusical" class="text-danger"></span>
            </div>
            @if (Model.Status != "EMPRESTADO")
            {
                <div class="form-check">
                    <input asp-for="IsDanificado" class="form-check-input" type="checkbox" value=@Model.IsDanificado id="flexCheckChecked" checked>
                    <label asp-for="Status" class="form-check-label" for="flexCheckChecked"></label>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
